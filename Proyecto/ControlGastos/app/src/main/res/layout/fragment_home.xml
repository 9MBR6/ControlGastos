<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <!-- Selector de fecha desde -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_fecha_desde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desde"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_fecha_hasta"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Selector de fecha hasta -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_fecha_hasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_fecha_desde"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tabla de datos -->
    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_fecha_desde"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <!-- Filas de datos -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ahorros"
                android:padding="8dp" />

            <TextView
                android:id="@+id/ahorros_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 €"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Formación"
                android:padding="8dp" />

            <TextView
                android:id="@+id/formacion_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 €"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ocio"
                android:padding="8dp" />

            <TextView
                android:id="@+id/ocio_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 €"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comida"
                android:padding="8dp" />

            <TextView
                android:id="@+id/comida_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 €"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gasolina"
                android:padding="8dp" />

            <TextView
                android:id="@+id/gasolina_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 €"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Imprevistos"
                android:padding="8dp" />

            <TextView
                android:id="@+id/imprevistos_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 €"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Internet+Móvil"
                android:padding="8dp" />

            <TextView
                android:id="@+id/internet_movil_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 €"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </TableRow>

    </TableLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="añadir_gastos"
        app:srcCompat="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
